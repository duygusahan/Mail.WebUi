@{
    Layout = null;
}

<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_HeadComponentPartial")
<body class="bg-gray-100">
    <!-- start navbar -->
    <div class="md:fixed md:w-full md:top-0 md:z-20 flex flex-row flex-wrap items-center bg-white p-6 border-b border-gray-300">
        <!-- logo -->
        <div class="flex-none w-56 flex flex-row items-center">
            <img src="/cleopatra/dist/img/images.png" class="w-10 flex-none">
            <strong class="capitalize ml-1 flex-1">MailBox</strong>

            <button id="sliderBtn" class="flex-none text-right text-gray-900 hidden md:block">
                <i class="fad fa-list-ul"></i>
            </button>
        </div>
        <!-- end logo -->
        <!-- navbar content toggle -->
        <button id="navbarToggle" class="hidden md:block md:fixed right-0 mr-6">
            <i class="fad fa-chevron-double-down"></i>
        </button>
        <!-- end navbar content toggle -->
        <!-- navbar content -->
        <div id="navbar" class="animated md:hidden md:fixed md:top-0 md:w-full md:left-0 md:mt-16 md:border-t md:border-b md:border-gray-200 md:p-10 md:bg-white flex-1 pl-3 flex flex-row flex-wrap justify-between items-center md:flex-col md:items-center">
            <!-- left -->
            <div class="text-gray-600 md:w-full md:flex md:flex-row md:justify-evenly md:pb-10 md:mb-10 md:border-b md:border-gray-200">
                <a class="mr-2 transition duration-500 ease-in-out hover:text-gray-900" href="#" title="email"><i class="fad fa-envelope-open-text"></i></a>
                <a class="mr-2 transition duration-500 ease-in-out hover:text-gray-900" href="#" title="email"><i class="fad fa-comments-alt"></i></a>
                <a class="mr-2 transition duration-500 ease-in-out hover:text-gray-900" href="#" title="email"><i class="fad fa-check-circle"></i></a>
                <a class="mr-2 transition duration-500 ease-in-out hover:text-gray-900" href="#" title="email"><i class="fad fa-calendar-exclamation"></i></a>
            </div>
            <!-- end left -->
            <!-- right -->
            <div class="flex flex-row-reverse items-center">
                <!-- user -->
                @await Component.InvokeAsync("_NavbarComponentPartial")
                <!-- end user -->
                <!-- notifcation -->
                <!-- end notifcation -->
                <!-- messages -->
                @await Component.InvokeAsync("_Last3MessageComponentPartial")
                <!-- end messages -->
            </div>
            <!-- end right -->
        </div>
        <!-- end navbar content -->
    </div>
    <!-- end navbar -->
    <!-- start wrapper -->
    <div class="h-screen flex flex-row flex-wrap">
        <!-- end sidebar -->
        <!-- start content -->
        <div class="bg-gray-100 flex-1 p-6 md:mt-16 grid grid-cols-8">
            @await Component.InvokeAsync("_SidebarComopnentPartial")
            <div class="col-span-6 card flex flex-col">
                <div class="px-3 border-b">
                    <form action="" class="flex">
                        <input class="p-3 flex-1" type="text" placeholder="Ara....">
                        <button type="submit" class="p-3">
                            <i class="fad fa-search"></i>
                        </button>
                    </form>
                </div>
                @RenderBody()
            </div>
        </div>
        <!-- end content -->
    </div>
    <!-- end wrapper -->
    <!-- script -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/cleopatra/dist/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
    <!-- end script -->
</body>
</html>
